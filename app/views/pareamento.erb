<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/stylesheets/home.css">

  <title>Pareamento</title>
</head>
<body>



  <section class="section">


    <form action="/count" method="post" name="user">
      Students:
      <select class="Select" name="user[name_students]">
        <% @students.each do |aluno| %>
        <option value="<%= aluno.id %>">
          <%= aluno.name_students %>
        </option>
        <% end %>
      </select>

      Pairs:
      <select class="Select" name="user[name_pairs]">
        <% @pairs.each do |aluno| %>
        <option value="<%= aluno.id %>">
          <%= aluno.name_pairs %>
        </option>
        <% end %>
      </select>


      <input class="Button" type="submit" name="name" value="Enviar">
    </form>

  </div>


  <div class="Container">
    <table>

      <div class="Slim">
        <div class="BoxSlim">

        </div>
        <div class="BoxNames">
          <% @pairs.each do |aluno| %>
          <div class="Par">
            <%= aluno.name_pairs %>
          </div>
          <% end %>
        </div>
      </div>


        <div class="Fat">

          <div class="BoxSlim">
            <% @students.each do |aluno| %>
            <div class="Names">
              <%= aluno.name_students %>
            </div>
            <% end %>
          </div>
          <div class="BoxFat">

            <br>


            <% cont = 0 %>
            <% for i in 1..12 %>
            <% for k in 1..i %>
            <div class="Pareamento">
              X
            </div>
            <% end %>

            <% for j in i..11 %>
            <% cont += 1 %>
            <div class="Pareamento">
              <%=@pairings[cont].count %>
            </div>
            <% end %>


            <% end %>

          </div>
        </div>
      </table>

    </div>
  </section>
</body>
</html>
